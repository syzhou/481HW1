<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/math"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/myTextView"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:textSize="14pt" />

 	 <TextView
 	     android:id="@+id/myCounterView"
 	     android:layout_width="wrap_content"
 	     android:layout_height="50dp"
 	     android:layout_alignBottom="@+id/guessButton"
 	     android:layout_centerHorizontal="true"
 	     android:text="0"
 	     android:textSize="20pt" />

 	 <Button
 	     android:id="@+id/resetButton"
 	     android:layout_width="110dp"
 	     android:layout_height="50dp"
 	     android:layout_centerVertical="true"
 	     android:text="Restart"
 	     android:textSize="8pt" />

 	 <Button
 	     android:id="@+id/guessButton"
 	     android:layout_width="110dp"
 	     android:layout_height="wrap_content"
 	     android:layout_alignBottom="@+id/resetButton"
 	     android:layout_alignRight="@+id/myEditText"
 	     android:text="Guess"
 	     android:textSize="8pt" />

 	 <EditText
 	     android:id="@+id/myEditText"
 	     android:layout_width="220dp"
 	     android:layout_height="wrap_content"
 	     android:layout_alignRight="@+id/myTextView"
 	     android:layout_below="@+id/myCounterView"
 	     android:ems="10"
 	     android:hint="@string/typeYourNumberHere"
 	     android:inputType="number"
 	     android:singleLine="true" />

</RelativeLayout>
